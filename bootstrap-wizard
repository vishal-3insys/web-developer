<!DOCTYPE html>
<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<nav class="navbar navbar-expand navbar-light bg-light">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link active" href="#step1">Step 1</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#step2">Step 2</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#step3">Step 3</a>
    </li>
  </ul>
  <div class="ml-auto">
    <button class="btn btn-secondary previous">Previous</button>
    <button class="btn btn-primary next">Next</button>
  </div>
</nav>

<div class="tab-content">
  <div class="tab-pane show active" id="step1">
    <!-- Step 1 content goes here -->step 1
  </div>
  <div class="tab-pane" id="step2">
    <!-- Step 2 content goes here --> step 2
  </div>
  <div class="tab-pane" id="step3">
    <!-- Step 3 content goes here --> step 3
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script>
const navPillEls = document.querySelectorAll('.nav-pills .nav-link');
const tabPaneEls = document.querySelectorAll('.tab-pane');
const nextBtnEl = document.querySelector('.next');
const previousBtnEl = document.querySelector('.previous');

let currentStep = 0;

nextBtnEl.addEventListener('click', function() {
  currentStep = (currentStep + 1) % navPillEls.length;
  updateStep(currentStep);
});

previousBtnEl.addEventListener('click', function() {
  currentStep = (currentStep + navPillEls.length - 1) % navPillEls.length;
  updateStep(currentStep);
});

navPillEls.forEach(navPillEl => {
  navPillEl.addEventListener('click', function(e) {
    e.preventDefault();

    currentStep = Array.from(navPillEls).indexOf(navPillEl);
    updateStep(currentStep);
  });
});

function updateStep(step) {
  navPillEls.forEach(navPillEl => {
    navPillEl.classList.remove('active');
  });
  navPillEls[step].classList.add('active');

  tabPaneEls.forEach(tabPaneEl => {
    tabPaneEl.classList.remove('show', 'active');
  });
  tabPaneEls[step].classList.add('show', 'active');
}


</script>
</body>
</html>
